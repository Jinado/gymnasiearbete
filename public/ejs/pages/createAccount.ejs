    <link rel="stylesheet" href="../../css/responsive.css">

    <title><%= title %></title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="/">Gymnasiearbete</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="#">Om oss</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Om produkten</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Priser</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Kontakta oss</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <form class="mt-md-5" method="POST" action="/checked-secret">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="company-secret">Företagskod</label>
                    <input type="text" class="form-control" id="company-secret" name="companySecret" placeholder="XXXX-XXXX-XXXX-XXXX" value="<%= secret %>" <%= readonly %>>
                </div>
                <div class="form-group col-md-2" id="checked-secret-btn">
                    <button type="submit" class="btn btn-success">Kolla kod</button>
                </div>
                <div class="form-group col-md-6">
                    <label for="company-name">Företagsnamn</label>
                    <input type="text" class="form-control" id="company-name" name="companyName" placeholder="Företagsnamn…" value="<%= compName %>" readonly>
                </div>
            </div>
        </form>
        <form method="POST" action="/create-account"> 
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstname">Förnamn</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Förnamn…" <%= disabled %>>
                </div>
                <div class="form-group col-md-6">
                    <label for="lastname">Efternamn</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Efternamn…" <%= disabled %>>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="email">E-post</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="john.doe@example.com" <%= disabled %>>
                </div>
                <div class="form-group col-md-4">
                    <label for="password">Lösenord</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Lösenord…" <%= disabled %>>
                </div>
                <div class="form-group col-md-4">
                    <label for="repeat-password">Repetera lösenord</label>
                    <input type="password" class="form-control" id="repeat-password" name="repeatPassword" placeholder="Lösenord…" <%= disabled %>>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="seq-question">Säkerhetsfråga</label>
                    <input type="text" class="form-control" id="seq-question" name="seqQuestion" placeholder="Säkerhetsfråga…" <%= disabled %>>
                </div>
                <div class="form-group col-md-6">
                    <label for="answer">Svar på säkerhetsfråga</label>
                    <input type="text" class="form-control" id="answer" name="answer" placeholder="Svar…" <%= disabled %>>
                </div>
            </div>
            <input type="text" style="display: none;" value="<%= compName %>" name="company">
            <button type="submit" class="btn btn-primary">Skapa konto</button>
        </form>
    </div>

<%- include ../partials/footer.ejs %>